{
    "name": "git-balocco/laravel-notification-template",
    "authors": [
        {
            "name": "k-yamamoto-balocco",
            "email": "k.yamamoto@balocco.info"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/git-balocco/key-value-list.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/gugunso/read-only-object.git"
        }
    ],
    "require": {
        "php": ">=7.1",
        "git-balocco/key-value-list": "^0.3.0",
        "gugunso/read-only-object": "^0.1.0"
    },
    "autoload": {
        "psr-4": {
            "GitBalocco\\LaravelNotificationTemplate\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GitBalocco\\LaravelNotificationTemplate\\Test\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "vimeo/psalm": "^4.7",
        "infection/infection": "^0.18.2",
        "maglnet/composer-require-checker": "^2.1",
        "slevomat/coding-standard": "^7.0",
        "squizlabs/php_codesniffer": "^3.6",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "orchestra/testbench": "^6.18",
        "phpmetrics/phpmetrics": "^2.7",
        "pdepend/pdepend": "^2.9"
    },
    "scripts": {
        "syntax": "phpdbg -qrr vendor/bin/parallel-lint ./src ./tests --exclude ./vendor",
        "phpunit": "phpdbg -qrr vendor/bin/phpunit --coverage-html qa/coverage",
        "infection": "vendor/bin/infection",
        "psalm": "phpdbg -qrr vendor/bin/psalm --show-info=true",
        "phpcs": "vendor/bin/phpcs  ./src --extensions=php --tab-width=4 -sp --standard=./ruleset.xml",
        "phpcbf": "vendor/bin/phpcbf ./src --extensions=php --tab-width=4 -sp --standard=./ruleset.xml",
        "pdpend": "vendor/bin/pdepend --summary-xml=/tmp/summary.xml --jdepend-chart=./qa/pdpend/jdepend.svg --overview-pyramid=./qa/pdpend/pyramid.svg ./src",
        "phpmetrics": "vendor/bin/phpmetrics --report-html=qa/phpmetrics/report src/",
        "qa": [
            "composer syntax",
            "composer psalm",
            "composer phpcs",
            "composer phpunit",
            "composer infection"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "GitBalocco\\LaravelNotificationTemplate\\ServiceProvider"
            ]
        }
    }

}
